    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "make test",
            "command": "/usr/bin/make",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}